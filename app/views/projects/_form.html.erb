<%= form_for([@user,@project,@prj_review]) do |form| %>
  <head>     
  <%= javascript_include_tag "customreviewrule", "data-turbolinks-track" => true %>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">  
  </head>
<nav class="navbar navbar-expand-sm bg-dark navbar-dark">
<a class="navbar-brand">CodeReviewApp</a>
  <ul class="navbar-nav">
    <li class="nav-item">
      <a class="nav-link" href="/">Home</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href=<%= user_projects_path(current_user.id) %>  >Upload Project</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href=<%= user_customreviewrules_path(current_user.id) %> >Custom Review Rules</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="#">Manage Your Project</a>
    </li>
  </ul>  
    <div class="search">
      <input class="searchplaceholder" type="search" placeholder="Search" aria-label="Search">
      <button class="searchbutton" type="submit">Search</button>
    </div>
</nav>

<div class="btn btn-outline-success my-2 my-sm-0 logout">
  <%= link_to 'Logout', destroy_user_session_path, method: :delete %>
</div>
<div class="errorclass">
<% if project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
        <% project.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>
</br>
  <div class="field">
    <%= form.label :'Project Name :' %>
    <%= form.text_field :ProjectName %>
  </div>
  <div class="field">
    <%= form.label :'Review Type :' %>
    <%= form.radio_button :ReviewType,'Default' %>
    <%= form.radio_button :ReviewType,'Custom' %>
  </div>


  <div class="actions">
    <%= form.submit 'Create Rule' %>
  </div>
<% end %>
